fun is_even(num)
{
   if(num <= 0)
   {
      return num == 0;
   }
   return is_even(num-2);
}

var n = 100;
var total = 50;
for(var i = 0 ; i < n ; i = i + 3) {
   if(i > total)
   {
      print "terminated";
      print i;
      break;
   }
   if(!is_even(i))
   {
      print "skipped";
      i = i + 1;
      print i;
      continue;
   }
   print i;
}

